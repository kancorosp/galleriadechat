        <script>
            var socket = io('/home', {
                transports: ['websocket']
            });
            socket.on('connect', function(data) {

            });

            socket.on('updateOpenRoomlist', function(data) {
                socket.emit('updateOpenRooms', true);
            });

            socket.on('wittyMessages', function(wittyMessages) {
                var $wittyList = $('.witty-list');
                // Clear curren witty list
                $wittyList.html('');

                wittyMessages.forEach(function(message) {
                    $wittyList.append('<p>' + message + '</p>');
                })
            });

            socket.on('barchatnotice', function(notice) {
                $("#barchatText").text(notice);
            });

            socket.on('openRooms', function(openRooms) {
                console.log('open room');
                console.log(openRooms);
                var $roomList = $('.room-list');
                // Clear curren witty list
                $roomList.html('');
                $.each(openRooms, function(namespace, rooms) {
                    var name = '';
                    switch (namespace) {
                        case 'random':
                            name = 'ランダムチャット';
                            break;
                        case 'mama':
                            name = 'ママチャット';
                            break;
                        case 'anything_talk':
                            name = 'とにかく話を聞いてほしい';
                            break;
                        case 'anything_listen':
                            name = 'とにかく話を聞いてあげたい';
                            break;
                        case 'bar_join':
                            name = 'Bar de 管理人';
                            break;
                        case 'bar_view':
                            name = 'Bar de 管理人';
                            break;

                    }
                    $.each(rooms, function(idx, room) {
                        $roomList.append('<p>' + name + '<a href="/chat/view/' + namespace + '?roomId=' + room.id + '">参加</a></p>');
                    })
                })
            });
        </script>
